  "version": "0.2.0",
  "configurations": [
    {
      "name": "av-canvas",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/lerna",
      "runtimeArgs": ["exec", "--scope", "@webrock/av-canvas", "--", "node"],
      "args": [
        "${workspaceRoot}/node_modules/.bin/vitest",
        "packages/av-canvas"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "av-cliper",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/lerna",
      "runtimeArgs": ["exec", "--scope", "@webrock/av-cliper", "--", "node"],
      "args": [
        "${workspaceRoot}/node_modules/.bin/vitest",
        "packages/av-cliper"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
